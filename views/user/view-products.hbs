<section class="service-sec">
  <div class="banner-sec">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-md-8 col-8">
          <div class="banner-content">
            <h1>Fresh & Organic Food, Delivered to Your Doorstep</h1>
            <h2>Premium quality at prices you'll love!</h2>
          </div>
        </div>
        <div class="col-md-4 col-4">
          <img
            class="bgimg img-fluid"
            src="/images/bg.jpg"
            alt="Organic Food"
          />
        </div>
      </div>
    </div>
  </div> 

  <div class="producthead container">
    <div class="row">
      <div class="col-12">
        <h2 class="title-h">Products</h2>
      </div>
    </div>

    <div class="content-head">
      <a href="/">All</a>
      |
      <a href="/category/Spice Powder">Spice Powders</a>
      |
      <a href="/category/Cooking Oil">Cooking Oil</a>
      |
    </div>

    <div class="sub-head">
      <h3>{{#if selectedCategory}}{{selectedCategory}}{{else}}All Products{{/if}}</h3>
      <div class="container">
        <div class="row g-4">
          {{#each products}}
            <div class="col-12 col-sm-6 col-lg-3">
              <div class="card product-card">
                <img
                  src="/product-images/{{this._id}}.jpg"
                  class="card-img-top product-img"
                  alt="{{this.name}}"
                  onerror="this.src='/images/default-product.jpg';"
                />
                <div class="card-body">
                  <h5 class="card-title">{{this.name}}</h5>
                  <p class="card-text text-muted">{{this.weight}}</p>
                  <div class="d-flex align-items-center">
                    <span class="price fw-bold me-auto">₹{{this.price}}</span>
                  </div>
                  <button
                    onclick="addToCart('{{this._id}}')"
                    class="addtocart btn btn-primary w-100 mt-3"
                    aria-label="Add {{this.name}} to cart"
                  >
                    Add to Cart
                  </button>
                </div>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</section>

