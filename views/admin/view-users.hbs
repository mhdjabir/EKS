<section>
    <div class="container mt-5">
        <h2 class="text-center">All Users</h2>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>No.</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each users}} 
                    <tr>
                        <td>{{add @index 1}}</td>
                        <td>{{this.name}}</td> 
                        <td>{{this.email}}</td>
                        <td>
                            <form action="/admin/remove-user/{{this._id}}" method="POST" style="display:inline;" onsubmit="return confirmRemoval();">
                                <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                            </form>
                        </td>
                    </tr>  
                    {{/each}}
                </tbody>
            </table> 
        </div>
    </div>
</section>

<script>
    function confirmRemoval() {
        return confirm('Are you sure you want to remove this user?');
    }
</script>