<section>
    <div class="container2">
        <div class="producthead container">
            <div class="row d-flex justify-content-between align-items-center">
                <div class="col-6">
                    <h2 class="title-h">Products</h2>
                </div>
                <div class="col-6 text-end">
                    <a class="btn btn-clean" href="/admin/users">Users</a>
                    <a class="btn btn-clean ms-3" href="/admin/orders">Orders</a>
                </div>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-3">
                <a href="/admin/add-product" class="btn btn-primary">
                    <i class="fa fa-plus"></i> Add Product
                </a> 
                <form id="searchForm" class="d-flex search-form" method="GET" action="/admin/search"
                    style="display: none;">
                    <input type="text" name="query" class="form-control" placeholder="Search products..." />
                    <button type="submit" class="btn btn-secondary ms-2">
                        <i class="fa fa-search"></i>
                    </button>
                </form>  
            </div> 

            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th scope="col">No.</th>
                            <th scope="col">Name</th>
                            <th scope="col">Category</th>
                            <th scope="col">Weight</th>
                            <th scope="col">Image</th>
                            <th scope="col"></th>
                        </tr>
                    </thead> 
                    <tbody>
                        {{#each products}}
                        <tr>
                            <th scope="row">{{add @index 1}}</th>
                            <td>{{this.name}}</td>
                            <td>{{this.category}}</td>
                            <td>{{this.weight}}</td>
                            <td>
                                <img src="/product-images/{{this._id}}.jpg" class="card-img-top product-img"
                                    alt="{{#if this.name}}{{this.name}}{{else}}Product Image{{/if}}" onerror="this.src='/images/default-product.jpg';">
                            </td>
                            <td>
                                <a href="/admin/edit-product/{{this._id}}" class="btn btn-warning">
                                    <i class="fa fa-edit"></i> Edit
                                </a>
                                <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger">
                                    <i class="fa fa-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>